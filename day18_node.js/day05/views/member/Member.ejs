<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%-include('../inc/Top.ejs') %>
    <hr />
    <div class="container">
        <h2>Member</h2>
        <p>
            <%= user.name %>님 반갑습니다!(<%= user.id %>)
            <a href="/logout">Logout</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>번호</th>
                    <th>ID</th>
                    <th>이름</th>
                    <th>이메일</th>
                </tr>
            </thead>
            <tbody>
                <% memberList.forEach(member => {
                %>
                    <tr>
                        <td><%= member.no %></td>
                        <td><%= member.id %></td>
                        <td><%= member.name %></td>
                        <td><%= member.email %></td>
                    </tr>
                <%
                });
                %>
            </tbody>
        </table>
    </div>
</body>
</html>